{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "PyKaraoke NG",
    "version": "0.7.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.pykaraoke.ng",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "resources": [
        "../../../../src/pykaraoke/core/backend.py",
        "../../../../src/pykaraoke/core/__init__.py",
        "../../../../src/pykaraoke/core/database.py",
        "../../../../src/pykaraoke/core/manager.py",
        "../../../../src/pykaraoke/core/player.py",
        "../../../../src/pykaraoke/config/__init__.py",
        "../../../../src/pykaraoke/config/constants.py",
        "../../../../src/pykaraoke/config/environment.py",
        "../../../../src/pykaraoke/config/version.py",
        "../../../../src/pykaraoke/__init__.py",
        "../../../../src/pykaraoke/players/__init__.py",
        "../../../../src/pykaraoke/players/cdg.py",
        "../../../../src/pykaraoke/players/cdg_aux.py",
        "../../../../src/pykaraoke/players/kar.py",
        "../../../../src/pykaraoke/players/mpg.py"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PyKaraoke NG",
        "width": 1024,
        "height": 768
      }
    ]
  }
}
